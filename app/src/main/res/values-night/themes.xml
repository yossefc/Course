<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème sombre pour l'application -->
    <style name="Theme.CoursesSupermarche" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleurs primaires -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorText</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Couleurs de surface -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Styles des composants Material Design -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Night</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Night</item>

        <!-- Fenêtre et statut -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Thème pour l'écran de démarrage -->
    <style name="Theme.CoursesSupermarche.Splash" parent="Theme.CoursesSupermarche">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Style pour les boutons en mode nuit -->
    <style name="Widget.App.Button.Night" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- Style pour les cartes en mode nuit -->
    <style name="Widget.App.CardView.Night" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>
</resources>